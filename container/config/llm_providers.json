{
  "providers": {
    "ollama": {
      "enabled": true,
      "type": "ollama",
      "config": {
        "endpoint": "http://localhost:11434",
        "default_model": "llama2",
        "timeout": 30,
        "max_retries": 3
      }
    },
    "openai": {
      "enabled": false,
      "type": "openai",
      "config": {
        "api_key_env": "OPENAI_API_KEY",
        "default_model": "gpt-4",
        "base_url": null,
        "timeout": 30,
        "max_retries": 3,
        "max_tokens": 4096
      }
    },
    "anthropic": {
      "enabled": false,
      "type": "anthropic",
      "config": {
        "api_key_env": "ANTHROPIC_API_KEY",
        "default_model": "claude-3-sonnet-20240229",
        "timeout": 30,
        "max_retries": 3,
        "max_tokens": 4096
      }
    }
  },
  "default_provider": "ollama",
  "fallback_providers": ["ollama"],
  "provider_selection": {
    "strategy": "round_robin",
    "health_check_interval": 60,
    "failure_threshold": 3
  }
}